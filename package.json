{
  "name": "oembed-spec",
  "description": "A parser for oEmbed specification",
  "homepage": "https://nicedoc.io/microlinkhq/oembed-spec",
  "version": "1.3.27",
  "main": "src/index.js",
  "author": {
    "email": "hello@microlink.io",
    "name": "microlink.io",
    "url": "https://microlink.io"
  },
  "contributors": [
    {
      "name": "Kiko Beats",
      "email": "josefrancisco.verdu@gmail.com"
    },
    {
      "name": "Rémi",
      "email": "remusao@users.noreply.github.com"
    },
    {
      "name": "Rémi Berson",
      "email": "remi@cliqz.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/oembed-spec.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/oembed-spec/issues"
  },
  "keywords": [
    "oembed",
    "parser",
    "spec"
  ],
  "dependencies": {
    "got": "~11.8.6",
    "tldts": "~5.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@microlink/demo-links": "latest",
    "ava": "latest",
    "benchmark": "latest",
    "big-list-of-naughty-strings": "latest",
    "c8": "latest",
    "chalk": "latest",
    "ci-publish": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "nano-staged": "latest",
    "npm-check-updates": "latest",
    "oembed-parser": "latest",
    "prettier-standard": "latest",
    "simple-git-hooks": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 10"
  },
  "files": [
    "scripts",
    "src"
  ],
  "scripts": {
    "benchmark": "node ./benchmarks/benchmark.js",
    "clean": "rm -rf node_modules",
    "contributors": "(npx git-authors-cli && npx finepack --sort-ignore-object-at ava && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "lint": "standard-markdown README.md && standard",
    "postinstall": "node scripts/postinstall.js",
    "postrelease": "npm run release:tags && npm run release:github && (ci-publish || npm publish --access=public)",
    "prerelease": "npm run update:check",
    "pretest": "npm run lint",
    "release": "standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "test": "c8 ava",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "test/**/*",
      "!test/helpers/**/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nano-staged": {
    "*.js": [
      "prettier-standard"
    ],
    "*.md": [
      "standard-markdown"
    ],
    "package.json": [
      "finepack --sort-ignore-object-at ava"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx nano-staged"
  }
}
